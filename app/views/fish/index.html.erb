<% if !notice.blank? %>
 <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Fish List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-25">Genus</th>
      <th class="w-25">Common Name</th>
      <th class="w-25">Description</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fish.each do |fish| %>
      <tr>
        <td class="w-25"><%= fish.genus %></td>
        <td class="w-25"><%= fish.commonname %></td>
        <td class="w-25"><%= fish.description %></td>
        <td class="w-25"></td>
        
      <td class="w-25">
    <%= link_to fish, class: "btn btn-default btn-sm" do %>
      Show
      <% end %>
    </td>
     <td class="w-25">  
    <%= link_to edit_fish_path(fish), class: "btn btn-default btn-sm" do %>
    Edit
    <% end %>
  </td>
     <td class="w-25">
    <%= link_to fish, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
 Delete
 <% end %>
 </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Fish', new_fish_path ,class:"btn btn-primary"%>
